{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>{{ team.name }}</h1>
        <div class="d-flex justify-content-between align-items-center">
            <a class="btn btn-dark me-3" href="{{ path('app_team_index') }}">Back to list</a>
            <a class="btn btn-warning me-3" href="{{ path('app_team_edit', {'id': team.id}) }}">Edit</a>
            {{ include('team/_delete_form.html.twig') }}
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Abbreviation</th>
                <td>{{ team.abbreviation }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ team.city }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Players</h2>
    <table class="table">
        <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date of birth</th>
            <th>Shirt number</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for player in team.players %}
            <tr>
                <td class="align-middle">{{ player.id }}</td>
                <td class="align-middle">{{ player.name }}</td>
                <td class="align-middle">{{ player.dateOfBirth ? player.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td class="align-middle"><span class="badge text-bg-secondary">{{ player.shirtNumber }}</span></td>
                <td class="align-middle text-end">
                    <a class="btn btn-success" role="button" href="{{ path('app_player_show', {'id': player.id}) }}">show</a>
                    <a class="btn btn-warning" role="button" href="{{ path('app_player_edit', {'id': player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
